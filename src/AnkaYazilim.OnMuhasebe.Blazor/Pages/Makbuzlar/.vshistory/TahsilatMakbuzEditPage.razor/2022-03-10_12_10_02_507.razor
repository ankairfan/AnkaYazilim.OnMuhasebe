@inherits BaseEditPage

@inject MakbuzService Service
@inject MakbuzHareketService MakbuzHareketService
@inject CariService CariService
@inject OzelKodService OzelKodService

<DevPopUpEditpageLayout CancelButtonText="@L["Cancel"]"
                        EditPageService="Service"
                        Caption="@L["ReceiptCard"]"
                        Height="870px"
                        ListPageService="Service"
                        OnSubmit="OnSubmit"
                        SubmitButtonText="@L["Save"]"
                        Width="870px">
    <EditPageContent>
        <DevGridLayout ColumnCount="11"
                       ColumnWidths="@ColumnWidths("75","3","170","20","60","3","125",
                                                   "20","100","80","80")"
                       RowCount="6"
                       RowHeights="@RowHeights("28","28","28","28","*","50")">
            <GridLayoutItems>
                <DevTextEdit Caption="@L["ReceiptNumber"]"
                             ColumnIndex="2"
                             IsFocus="true"
                             NullText="@L["EnterReceiptNumber"]"
                             RowIndex="0"
                             @bind-Value="@Service.DataSource.MakbuzNo">
                </DevTextEdit>
                <DevDateEdit Caption="@L["Date"]"
                             ColumnIndex="6"
                             NullText="@L["EnterDate"]"
                             RowIndex="0"
                             @bind-Value="@Service.DataSource.Tarih">
                </DevDateEdit>
                <DevCheckEdit ColumnIndex="10"
                              FalseCaption="@L["Passive"]"
                              RowIndex="0"
                              TrueCaption="@L["Active"]"
                              @bind-Value="@Service.DataSource.Durum">
                </DevCheckEdit>
                <DevButtonEdit ButtonClickInvokeFunction="() => {
                                      CariService.BeforeShowPopupListPage(
                                          Service.DataSource.CariId); }"
                               Caption="@L["Customer"]"
                               ColumnIndex="2"
                               ColumnSpan="9"
                               NullText="@L["SelectCard"]"
                               IsFocus="true"
                               RowIndex="1"
                               Service="CariService"
                               @bind-Value="@Service.DataSource.Unvan">
                </DevButtonEdit>
                <DevButtonEdit ButtonClickInvokeFunction="() => {
                                      OzelKodService.BeforeShowPopupListPage(
                                      OzelKodTuru.OzelKod1, KartTuru.Makbuz,
                                      Service.DataSource.OzelKod1Id); }"
                               Caption="@L["CustomCode1"]"
                               ColumnIndex="2"
                               DeleteButtonKeydownInvokeFunction="() => {
                                      OzelKodService.ButtonEditDeleteKeyDown(
                                      Service.DataSource,
                                      nameof(Service.DataSource.OzelKod1Adi)); }"
                               NullText="@L["SelectCard"]"
                               RowIndex="2"
                               Service="OzelKodService"
                               @bind-Value="@Service.DataSource.OzelKod1Adi">
                </DevButtonEdit>
                <DevButtonEdit ButtonClickInvokeFunction="() => {
                                      OzelKodService.BeforeShowPopupListPage(
                                      OzelKodTuru.OzelKod2, KartTuru.Makbuz,
                                      Service.DataSource.OzelKod2Id); }"
                               Caption="@L["CustomCode2"]"
                               ColumnIndex="2"
                               DeleteButtonKeydownInvokeFunction="() => {
                                      OzelKodService.ButtonEditDeleteKeyDown(
                                      Service.DataSource,
                                      nameof(Service.DataSource.OzelKod2Adi)); }"
                               NullText="@L["SelectCard"]"
                               RowIndex="3"
                               Service="OzelKodService"
                               @bind-Value="@Service.DataSource.OzelKod2Adi">
                </DevButtonEdit>
                <DevMemoEdit Caption="@L["Description"]"
                             ColumnIndex="6"
                             ColumnSpan="5"
                             NullText="@L["EnterDescription"]"
                             RowIndex="2"
                             RowSpan="2"
                             @bind-Value="@Service.DataSource.Aciklama">
                </DevMemoEdit>
                <DevHareketDataGrid ColumnIndex="0"
                                    ColumnSpan="11"
                                    DataSource="MakbuzHareketService.ListDataSource.ToList()"
                                    DoubleClick="MakbuzHareketService.BeforeUpdate"
                                    L="L"
                                    RowIndex="4"
                                    Service="MakbuzHareketService"
                                    ToolbarCaption="@L["ReceiptRows"]"
                                    ToolbarDeleteButtonClick="MakbuzHareketService.DeleteAsync"
                                    ToolbarDeleteButtonEnabled="MakbuzHareketService.ListDataSource.Count > 0"
                                    ToolbarNewButtonClick="MakbuzHareketService.BeforeInsert"
                                    ToolbarUpdateButtonClick="MakbuzHareketService.BeforeUpdate"
                                    ToolbarUpdateButtonEnabled="MakbuzHareketService.ListDataSource.Count > 0">
                    <Columns>
                        <DxDataGridColumn Caption="@L["PaymentType"]"
                                          Field="@nameof(SelectMakbuzHareketDto.OdemeTuruAdi)"
                                          FixedStyle="DataGridFixedStyle.Left"
                                          Width="70px" />

                        <DxDataGridDateEditColumn Caption="@L["Date"]"
                                                  DisplayFormat="@L["DateFormat"]"
                                                  Field="@nameof(SelectMakbuzHareketDto.Vade)"
                                                  TextAlignment="DataGridTextAlign.Center"
                                                  Visible="MakbuzHareketService.SelectedItem?.OdemeTuru == OdemeTuru.Cek|| MakbuzHareketService.SelectedItem?.OdemeTuru == OdemeTuru.Senet"
                                                  Width="150px" />

                        <DxDataGridColumn Caption="@L["SafeName"]"
                                          Field="@nameof(SelectMakbuzHareketDto.KasaAdi)"
                                          Visible="MakbuzHareketService.SelectedItem?.OdemeTuru == OdemeTuru.Nakit"
                                          Width="200px" />

                        <DxDataGridColumn Caption="@L["Unit"]"
                                          Field="@nameof(SelectMakbuzHareketDto.BirimAdi)"
                                          Width="80px" />
                        <DxDataGridColumn Caption="@L["Warehouse"]"
                                          Field="@nameof(SelectMakbuzHareketDto.DepoAdi)"
                                          Width="150px" />
                        <DxDataGridSpinEditColumn Caption="@L["Quantity"]"
                                                  DisplayFormat="n2"
                                                  Field="@nameof(SelectMakbuzHareketDto.Miktar)"
                                                  Width="100px" />
                        <DxDataGridSpinEditColumn Caption="@L["UnitPrice"]"
                                                  DisplayFormat="n2"
                                                  Field="@nameof(SelectMakbuzHareketDto.AlisFiyat)"
                                                  Width="113px" />
                        <DxDataGridSpinEditColumn Caption="@L["GrossTotal"]"
                                                  DisplayFormat="n2"
                                                  Field="@nameof(SelectMakbuzHareketDto.BrutTutar)"
                                                  Width="113px" />
                        <DxDataGridSpinEditColumn Caption="@L["DiscountTotal"]"
                                                  DisplayFormat="n2"
                                                  Field="@nameof(SelectMakbuzHareketDto.IndirimTutar)"
                                                  Width="113px" />
                        <DxDataGridSpinEditColumn Caption="@L["NetTotal"]"
                                                  DisplayFormat="n2"
                                                  Field="@nameof(SelectMakbuzHareketDto.NetTutar)"
                                                  Width="113px" />
                        <DxDataGridSpinEditColumn Caption="@L["TaxRate"]"
                                                  DisplayFormat="n0"
                                                  Field="@nameof(SelectMakbuzHareketDto.KdvOran)"
                                                  Width="113px" />
                        <DxDataGridSpinEditColumn Caption="@L["TaxTotal"]"
                                                  DisplayFormat="n2"
                                                  Field="@nameof(SelectMakbuzHareketDto.KdvTutar)"
                                                  Width="113px" />
                        <DxDataGridSpinEditColumn Caption="@L["GrandTotal"]"
                                                  DisplayFormat="n2"
                                                  Field="@nameof(SelectMakbuzHareketDto.GenelTutar)"
                                                  Width="113px" />
                    </Columns>
                    <TotalSummary>
                        <DxDataGridSummaryItem DisplayFormat="@L["Totals"]"
                                               Field="@nameof(SelectFaturaHareketDto.HareketAdi)"
                                               SummaryType="SummaryItemType.Count" />
                        <DxDataGridSummaryItem DisplayFormat="n0"
                                               Field="@nameof(SelectFaturaHareketDto.HareketSayisi)"
                                               SummaryType="SummaryItemType.Sum" />
                        <DxDataGridSummaryItem DisplayFormat="n2"
                                               Field="@nameof(SelectFaturaHareketDto.BrutTutar)"
                                               SummaryType="SummaryItemType.Sum" />
                        <DxDataGridSummaryItem DisplayFormat="n2"
                                               Field="@nameof(SelectFaturaHareketDto.IndirimTutar)"
                                               SummaryType="SummaryItemType.Sum" />
                        <DxDataGridSummaryItem DisplayFormat="n2"
                                               Field="@nameof(SelectFaturaHareketDto.NetTutar)"
                                               SummaryType="SummaryItemType.Sum" />
                        <DxDataGridSummaryItem DisplayFormat="n2"
                                               Field="@nameof(SelectFaturaHareketDto.KdvTutar)"
                                               SummaryType="SummaryItemType.Sum" />
                        <DxDataGridSummaryItem DisplayFormat="n2"
                                               Field="@nameof(SelectFaturaHareketDto.GenelTutar)"
                                               SummaryType="SummaryItemType.Sum" />
                    </TotalSummary>
                </DevHareketDataGrid>
                <DxGridLayoutItem Column="0"
                                  ColumnSpan="11"
                                  Row="5">
                    <Template>
                        <DevGridLayout ColumnCount="11"
                                       ColumnWidths="@ColumnWidths("90","3","139","5","98","3",
                                                                   "139","5","110","3","139")"
                                       RowCount="6"
                                       RowHeights="@RowHeights("28","10","28","28","28","10")">
                            <GridLayoutItems>
                                <DxGridLayoutItem Column="0"
                                                  ColumnSpan="11"
                                                  Row="0">
                                    <Template>
                                        <DevHareketPageHeader Caption="@L["InvoiceSubtotals"]" />
                                    </Template>
                                </DxGridLayoutItem>

                                <DevCurrencyEdit Caption="@L["GrossTotal"]"
                                                 ColumnIndex="2"
                                                 Enabled="false"
                                                 RowIndex="2"
                                                 @bind-Value="Service.DataSource.BrutTutar" />
                                <DevCurrencyEdit Caption="@L["DiscountTotal"]"
                                                 ColumnIndex="6"
                                                 Enabled="false"
                                                 RowIndex="2"
                                                 @bind-Value="Service.DataSource.IndirimTutari" />
                                <DevCurrencyEdit Caption="@L["NetTotal"]"
                                                 ColumnIndex="10"
                                                 Enabled="false"
                                                 RowIndex="2"
                                                 @bind-Value="Service.DataSource.NetTutar" />
                                <DevCurrencyEdit Caption="@L["TaxTotal"]"
                                                 ColumnIndex="10"
                                                 Enabled="false"
                                                 RowIndex="3"
                                                 @bind-Value="Service.DataSource.KdvTutar" />
                                <DevCurrencyEdit Caption="@L["GrandTotal"]"
                                                 ColumnIndex="10"
                                                 Enabled="false"
                                                 RowIndex="4"
                                                 @bind-Value="Service.DataSource.GenelTutar" />
                            </GridLayoutItems>
                        </DevGridLayout>
                    </Template>
                </DxGridLayoutItem>
            </GridLayoutItems>
        </DevGridLayout>
    </EditPageContent>
</DevPopUpEditpageLayout>

@if (FaturaHareketService.EditPageVisible)
{
    <FaturaHareketEditPage />
}

@if (CariService.IsPopupListPage)
{
    <DevPopupListpageLayout DataGridService="CariService"
                        CancelButtonText="@L["Cancel"]"
                        Caption="@L["CustomerCards"]"
                        Closed="CariService.HideListPage"
                        SelectButtonInvokeFunction="(()=>{
                                  CariService.SelectEntity(Service.DataSource); })"
                        SelectButtonText="@L["Select"]"
                        Visible="true"
                        Width="1000px">
        <ListPageContent>
            <CariListPage />
        </ListPageContent>
    </DevPopupListpageLayout>
}

@if (OzelKodService.IsPopupListPage)
{
    <DevPopupListpageLayout DataGridService="OzelKodService"
                        CancelButtonText="@L["Cancel"]"
                        Caption="@L["CustomCodeCards"]"
                        Closed="OzelKodService.HideListPage"
                        SelectButtonInvokeFunction="(()=>{
                                  OzelKodService.SelectEntity(Service.DataSource); })"
                        SelectButtonText="@L["Select"]"
                        Visible="true"
                        Width="1000px">
        <ListPageContent>
            <OzelKodListPage />
        </ListPageContent>
    </DevPopupListpageLayout>
}

@code {

    protected override void OnParametersSet()
    {
        Service.FillTable(FaturaHareketService, StateHasChanged);
    }

}