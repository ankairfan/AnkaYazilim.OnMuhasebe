@page "/"
@using AnkaYazilim.Blazor.Core.Components.Dev.DataEditors
@using AnkaYazilim.Blazor.Core.Components.Dev.Layouts

<DevGridLayout ColumnCount="3"
ColumnSpacing="3px"
 RowCount="3"
 RowSpacing="3px">

 <GridLayoutItems>
      <DevLabel Caption="Adı Soyadı" ColumnIndex="0" RowIndex="0"/>
 </GridLayoutItems>

</DevGridLayout>


<DxGridLayout>
    <Rows>
        <DxGridLayoutRow></DxGridLayoutRow>
        <DxGridLayoutRow></DxGridLayoutRow>
        <DxGridLayoutRow></DxGridLayoutRow>
    </Rows>

    <Columns>
        <DxGridLayoutColumn Width="33%"></DxGridLayoutColumn>
        <DxGridLayoutColumn Width="33%"></DxGridLayoutColumn>
        <DxGridLayoutColumn Width="*"></DxGridLayoutColumn>
    </Columns>

    <Items>
       <DevLabel Caption="Adı Soyadı" ColumnIndex="0" RowIndex="0"/>

         <DxGridLayoutItem Row="0" Column="1">
            <Template>
                 <DxTextBox Text="0-1"></DxTextBox>
            </Template>
        </DxGridLayoutItem>
         <DxGridLayoutItem Row="0" Column="2">
            <Template>
                 <DxTextBox Text="0-2"></DxTextBox>
            </Template>
        </DxGridLayoutItem>

         <DxGridLayoutItem Row="1" Column="0">
            <Template>
                 <DxTextBox Text="1-0"></DxTextBox>
            </Template>
        </DxGridLayoutItem>
         <DxGridLayoutItem Row="1" Column="1">
            <Template>
                 <DxTextBox Text="1-1"></DxTextBox>
            </Template>
        </DxGridLayoutItem>
         <DxGridLayoutItem Row="1" Column="2">
            <Template>
                 <DxTextBox Text="1-2"></DxTextBox>
            </Template>
        </DxGridLayoutItem>

         <DxGridLayoutItem Row="2" Column="0">
            <Template>
                 <DxTextBox Text="2-0"></DxTextBox>
            </Template>
        </DxGridLayoutItem>
         <DxGridLayoutItem Row="2" Column="1">
            <Template>
                 <DxTextBox Text="2-1"></DxTextBox>
            </Template>
        </DxGridLayoutItem>
         <DxGridLayoutItem Row="2" Column="2">
            <Template>
                 <DxTextBox Text="2-2"></DxTextBox>
            </Template>
        </DxGridLayoutItem>
    </Items>
</DxGridLayout>